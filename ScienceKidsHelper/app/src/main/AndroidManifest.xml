<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wet.beastbots.sciencekidshelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainAstronomyActivity"
            android:label="@string/title_activity_main_astronomy"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wet.beastbots.sciencekidshelper.MainActivity" />
        </activity>
        <activity
            android:name=".ElementaryAstronomyActivity"
            android:label="@string/title_activity_elementary_astronomy"
            android:parentActivityName=".MainAstronomyActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wet.beastbots.sciencekidshelper.MainAstronomyActivity" />
        </activity>
        <activity
            android:name=".TrueOrFalseProblemActivity"
            android:label="TrueOrFalseProblemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WriteInProblemActivity"
            android:label="WriteInProblemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MultipleAnswerProblemActivity"
            android:label="MultipleAnswerProblemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MultipleChoiceProblemActivity"
            android:label="MultipleChoiceProblemActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ElementaryAstronomyResourcesActivity"
            android:label="@string/title_activity_elementary_astronomy_resources"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ElementaryBiologyActivity"
            android:label="@string/title_activity_elementary_biology"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>